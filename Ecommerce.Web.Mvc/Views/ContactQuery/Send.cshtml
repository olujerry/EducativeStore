@model ContactQueryDto

@{
    ViewData["Title"] = "Contact Us";
    Layout = LayoutPage.ShopLayout;
}


<div class="top-header bg-soft-banana">
    <div class="container">
        <div class="page-title">
            <span><i class="fa-regular fa-envelope"></i> Contact Us</span>
        </div>
    </div>
</div>

<div class="container">
    <div class="p-4 content-section">
        <div class="row g-0">
            <div class="col-md-6">
                <div class="text-center mt-3">
                    Contact us to find out more or let us know how we can help you better.
                </div>
                <div class="text-center">
                    <img src="/assets/images/contact-us.svg" class="img-fluid" style="max-height: 400px">
                    @*<img src="/assets/images/contact-us.svg" class="img-fluid" style="max-height: 300px" />*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="h-100 d-flex justify-content-center align-items-center">
                    <div class="py-4 px-3 mw-400">
                        <form class="row" asp-controller="ContactQuery" asp-action="Send" method="post">
                            <div class="mb-2">
                                <label asp-for="FullName">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName">
                                <span asp-validation-for="FullName"></span>
                            </div>
                            <div class="mb-2">
                                <label asp-for="Email">Email</label>
                                <input type="email" class="form-control" asp-for="Email">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-2">
                                <label asp-for="Subject">Subject (max 50 char.)</label>
                                <input type="text" class="form-control" asp-for="Subject">
                                <span asp-validation-for="Subject"></span>
                            </div>
                            <div class="mb-2">
                                <label asp-for="MessageBody">Message (max 200 char.)</label>
                                <textarea class="form-control" asp-for="MessageBody" rows="4"></textarea>
                                <span asp-validation-for="MessageBody"></span>
                            </div>
                            <div class="mb-2">
                                <button class="btn btn-banana w-100 signup-button" type="submit">Send Message</button>
                            </div>
                            <div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


