
@{
    var categoryBread = ViewBag.CategoryBreadcumb as IEnumerable<BreadCumbVM>;
    var last = categoryBread.LastOrDefault();
    var lastNoLink = (bool)ViewBag.LastNoLink;
}


@if (categoryBread != null)
{
    <ol class="cd-breadcrumb custom-separator ps-0">
        <li><a href="/"><i class="fa-solid fa-house me-1"></i>Home</a></li>
        <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
        @foreach (var item in categoryBread.ToList())
        {
            if (item.Equals(last))
            {
                if (lastNoLink)
                {
                    <li><a href="/shop/@item.Slug">@item.Name</a></li>
                }
                else
                {
                    <li class="current"><em>@item.Name</em></li>
                }
            }
            else
            {
                <li><a href="/shop/@item.Slug">@item.Name</a></li>
            }
        }
    </ol>
}
